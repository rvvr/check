.intro
  width 100%
  overflow hidden
  background-color #273746
  padding 40px 10px 50px
  position fixed
  z-index 2
  box-shadow 0px 20px 20px 0px rgba(0, 0, 0, 0.5)

.title
  font-family Raleway
  color #ffffff
  font-size 50px
  font-weight 300
  line-height 1.2
  margin-bottom 20px

.description
  font-family Raleway
  color #D3D6DA
  font-size 21px
  font-weight 300
  margin-bottom 40px

.big_btn
  background-color transparent
  font-family Raleway
  width 220px
  height 40px
  border 2px solid #34495E
  border-radius 3px
  color #EAECEE
  text-transform uppercase
  font-weight 700
  font-size 13px

  &:hover
    background-color #34495E

  &:active
    background-color yel
    color #2C3E50
