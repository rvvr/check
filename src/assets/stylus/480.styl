@media (max-width: 480px)

  .movie
    padding 20px 0 0

  .movie_title
    overflow visible
    white-space normal
    line-height 1.25

  .movie_content
    flex-direction column
    align-items center

  .movie_poster 
    margin 0 0 10px

  .movie_updates
    margin-top 0
    text-align center
    padding-top 0

  .movie_update
    margin-top 10px
    display inline-block

  .movie_info
    margin 10px auto 0
    display block

  .movie_desc
    text-align center
    padding 0 20px 20px 20px
