@media (max-width: 780px)
  .sidebar_fix
    height 100%
    overflow hidden

  .movie_all_prices_table
    width 100%

  .movies
    width 100%
    float none

  .filter_trigger
    display block
    width 50px
    height 50px
    text-align center

  .filter
    overflow-y auto
    padding 20px
    width 320px
    padding-top 35px
    height 100vh
    background #2c3e50
    position fixed
    left -320px
    top 50px
    box-shadow 2px 0px 2px #212f3d
    transition transform .2s ease

  .filter_open

    .filter
      transform translateX(320px)

  .filters
    position relative

  .options
    border none

  .option_title
    text-align left
    background-color transparent

  .option_items
    padding 0
