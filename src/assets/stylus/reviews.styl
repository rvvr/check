.movie_reviews
  margin-top 30px

.movie_reviews_toggle
  text-transform uppercase
  font-family Raleway
  font-weight bold
  font-size 12px
  letter-spacing 1px
  background-color #2c3e50
  display inline-block
  padding 10px 15px
  cursor pointer

  &:hover
    color #fff

.movie_review + .movie_review
  border-top 2px solid #2c3e50
  padding-top 20px
  margin-top 20px

.movie_reviews_content
  margin-top 20px

.review_star
  color yel

.movie_review_title
  font-weight bold
  margin-bottom 0.5em
  color #fff
  font-size 1em

.movie_review_rating
  font-size 1.333em
  margin-bottom 10px

.movie_review_author
  margin-bottom 10px
  font-size 0.75em
